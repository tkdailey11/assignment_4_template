<div class='content'>
  <%= form_for(:user_session, url: login_path, html: { class: 'form-horizontal' } ) do |form| %>
    <div class="form-group">
      <div class='col-sm-3'>
        <%= form.label :email, class: 'control-label' %>
      </div>
      <div class='col-sm-5'>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class='col-sm-3'>
        <%= form.label :password, class: 'control-label' %>
      </div>
      <div class='col-sm-5'>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class='col-sm-3'></div>
      <div class='col-sm-5'>
        <%= form.submit :login, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
  <p>New user?  <%= link_to 'Sign up now!', new_user_path, class: 'btn btn-default' %></p>
</div>
